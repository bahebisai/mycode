<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FileManagerOperTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/filemanager_theme_color</item>
        <item name="colorPrimaryDark">@color/filemanager_theme_color_dark</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:alertDialogTheme">@style/FileManagerAlertDialogTheme</item>
        <item name="android:radioButtonStyle">@style/FileManagerRadioButton</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.Material.Light.ListView">
        <item name="android:overScrollMode">always</item>
    </style>

    <style name="FileManagerRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton</item>
    </style>

    <style name="FileManagerActionBarOverflowQP" parent="@style/Widget.AppCompat.ActionButton.Overflow">
    </style>

    <style name="FileManagerActionBarbutton" parent="@style/Widget.AppCompat.ActionButton.Overflow">

    </style>

    <style name="FileManagerActionBarEditbutton" parent="@android:style/Widget.Material.ActionButton">
    </style>

    <style name="ContactsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@color/filemanager_theme_color</item>
        <item name="android:titleTextStyle">@style/ContactsActionBarTitleText</item>
        <item name="android:backgroundStacked">@color/filemanager_theme_color</item>
    </style>

    <style name="ContactsActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

    <style name="EditStatusActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="filemanager_action_button" parent="@android:style/Widget.ActionButton">
        <item name="android:background">@color/filemanager_theme_color</item>
    </style>

    <style name="FileManagerAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorPrimary">@color/filemanager_theme_color</item>
        <item name="android:colorPrimaryDark">@color/filemanager_theme_color_dark</item>
        <item name="android:colorAccent">@color/dialog_ok</item>
        <item name="android:background">@color/transparent_background</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="FileManagerTextView" parent="@android:style/Widget.TextView">
        <item name="android:textCursorDrawable">@drawable/text_cursor_material</item>
    </style>

    <style name="ActivityTheme.appCompat" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="actionModeBackground">@color/filemanager_theme_color</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow</item>
        <item name="colorPrimary">@color/filemanager_theme_color</item>
        <item name="colorPrimaryDark">@color/filemanager_theme_color_dark</item>
        <item name="colorAccent">@color/category_item_name_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:alertDialogTheme">@style/FileManagerAlertDialogTheme</item>
        <item name="android:radioButtonStyle">@style/FileManagerRadioButton</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl_alpha
        </item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl_alpha
        </item>
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl_alpha</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_material_all</item>
        <item name="android:actionBarStyle">@style/Holo.ActionBar</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="ActivityTheme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PrivateActivityTheme.appCompat" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="actionModeBackground">@color/filemanager_theme_color</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow</item>
        <item name="colorPrimary">@color/filemanager_private_theme_color</item>
        <item name="colorPrimaryDark">@color/filemanager_private_theme_color_dark</item>
        <item name="colorAccent">@color/category_item_name_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:alertDialogTheme">@style/FileManagerAlertDialogTheme</item>
        <item name="android:radioButtonStyle">@style/FileManagerRadioButton</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl_alpha
        </item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl_alpha
        </item>
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl_alpha</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_material_all</item>
        <item name="android:actionBarStyle">@style/Holo.ActionBar</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="ActivityTheme.NoActionBar" parent="@style/ActivityTheme.appCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Holo.ActionBar" parent="android:Widget.Holo.ActionBar"></style>

    <style name="CustomEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/main_nava_item_default</item>
        <item name="colorControlActivated">@color/dialog_ok</item>
    </style>

    <style name="GlobalSearchEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/main_nava_item_default</item>
        <item name="colorControlActivated">@color/golbal_search__color</item>
    </style>

    <style name="SearchEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/main_nava_item_default</item>
        <item name="colorControlActivated">@color/float_menu_exposed_pressed_color</item>
    </style>

    <style name="mProgressbarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/space_nomorl_progress_horizontal</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>
    
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#FFFF5722</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
    <style name="AnimationPreviewUp">
        <item name="android:windowEnterAnimation">@anim/pop_in_up</item>
        <item name="android:windowExitAnimation">@anim/pop_out_up</item>
    </style>
    <style name="AnimationPreviewLeft">
        <item name="android:windowEnterAnimation">@anim/pop_in_left</item>
        <item name="android:windowExitAnimation">@anim/pop_out_left</item>
    </style>
    <style name="AnimationPreviewLefUp">
        <item name="android:windowEnterAnimation">@anim/pop_in_grid</item>
        <item name="android:windowExitAnimation">@anim/pop_out_grid</item>
    </style>
</resources>