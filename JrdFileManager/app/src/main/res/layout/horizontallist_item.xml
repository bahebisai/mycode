<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/horizontallist_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:alpha="0.5"
        android:gravity="center"
        android:src="@drawable/ic_arrow_small" />

    <TextView
        android:id="@+id/horizontallist_item_path"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_filepathbrower_height"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/main_filepathbrower_navigation_max_width"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/main_filepathbrower_size" />

</LinearLayout>
