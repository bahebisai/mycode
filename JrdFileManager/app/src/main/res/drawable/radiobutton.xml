<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <bitmap
            android:src="@drawable/ic_radio_button_on_black_24dp"
            android:tint="@color/dialog_ok"/>
    </item>
    <item android:state_checked="false">
        <bitmap
            android:src="@drawable/ic_radio_button_off_black_24dp"
            android:tint="@color/radio_button_false"/>
    </item>

</selector>
